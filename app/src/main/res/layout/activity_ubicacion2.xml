<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FAFAFA">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ubicaciones Guardadas"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="#212121" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Ejemplo de una ubicación guardada -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:marginBottom="8dp"
                android:elevation="4dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvUbicacion1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: 1"
                    android:textSize="16sp"
                    android:textColor="#424242" />

                <TextView
                    android:id="@+id/tvCalle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calle: Avenida Central #45"
                    android:textSize="16sp"
                    android:textColor="#424242" />

                <TextView
                    android:id="@+id/tvLatitud1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latitud: 19.4326"
                    android:textSize="16sp"
                    android:textColor="#424242" />

                <TextView
                    android:id="@+id/tvLongitud1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Longitud: -99.1332"
                    android:textSize="16sp"
                    android:textColor="#424242" />
            </LinearLayout>

            <!-- Agregar más bloques de ubicaciones según los datos -->
            <!-- Bloque de ejemplo de otra ubicación -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:marginBottom="8dp"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/tvUbicacion2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: 2"
                    android:textSize="16sp"
                    android:textColor="#424242" />

                <TextView
                    android:id="@+id/tvCalle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calle: Calle Reforma #32"
                    android:textSize="16sp"
                    android:textColor="#424242" />

                <TextView
                    android:id="@+id/tvLatitud2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latitud: 19.4265"
                    android:textSize="16sp"
                    android:textColor="#424242" />

                <TextView
                    android:id="@+id/tvLongitud2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Longitud: -99.1438"
                    android:textSize="16sp"
                    android:textColor="#424242" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver al Mapa"
        android:backgroundTint="#03A9F4"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</LinearLayout>
